<% layout('layouts/boilerplate') %> 
    <h1>Edit your new nutritional information here!</h1>
    <form action="/nutritions/<%=nutrition._id%>?_method=PUT" method="POST" novalidate class="validated-form">
        <div class="mb-3">
            <label class="form-label" for="ingredient">Ingredient:</label>
            <select class="form-control" name="ingredient" id="ingredient">
                <option value="<%= nutrition.ingredient %>"><%= nutrition.ingredient %></option>
            </select>
        </div>
        <div class="mb-3 row">
            <div class="col">
                <label class="form-label" for="calorie-value">Calories:</label>
                <input class="form-control" type="number" id="calorie-value" name="calorievalue" min="0" step="any" value="<%= nutrition.calories.value %>" required>
            </div>
            <div class="col">
                <label class="form-label" for="calorie-per">per:</label>
                <select class="form-control" name="calorieper" id="calorie-per">
                    <option value="100gram">100 g</option>
                    <option value="1pc">1 pc</option>
                    <option value="100ml">100 ml</option>
                </select>
            </div>
        </div>
        <div class="mb-3 row">
            <div class="col">        
                <label class="form-label" for="protein">Protein:</label>
                <input class="form-control" type="number" min="0" id="protein" step="any" name="protein" value="<%= nutrition.protein %>" required>
            </div>
            <div class="col">
                <label class="form-label" for="carb">Carb:</label>
                <input class="form-control" type="number" min="0" id="carb" step="any" name="carb" value="<%= nutrition.carb %>" required>
            </div>
            <div class="col">
                <label class="form-label" for="fat">Fat:</label>
                <input class="form-control" type="number" min="0" id="fat" step="any" name="fat" value="<%= nutrition.fat %>" required> 
            </div>
        </div>
        <div class="mb-3">
            <% let disabled = 'disabled' %>
            <% if (user.username === 'arsakhrani') { %>
                <% disabled = '' %>
            <% } %>    
            <button class="btn btn-primary" type="submit" <%= disabled %>>Submit</button>
        </div>
    </form>
    <a href="/nutritions/<%=nutrition._id%>">Cancel Edit</a>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="/styles/js/edit.js"></script>