<% layout('layouts/boilerplate') %> 
<body>
    <div class="wrapper">
        <%- include('./partials/sidebar') %>
        <div class="content">
            <div id="mobile-filters" class="d-xl-none d-xxl-none">
                <a class="ml-3 filter-link" href="/recipes/new">Add a new recipe +</a>
                <div class="accordion accordion-flush" id="accordionFlushExample">
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="flush-headingOne">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                        Filters
                        </button>
                        </h2>
                        <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
                            <div class="accordion-body">
                                <ul class="filter-link">
                                    <li class="mb-3"><a class="filter-link" href="/recipes">All Recipes</a></li>
                                    <li class="mb-3"><a class="filter-link" href="/recipes?mealtype=your">My Recipes</a></li>
                                    <li class="mb-3"><a class="filter-link" href="/recipes?mealtype=breakfast">Breakfast Recipes</a></li>
                                    <li class="mb-3"><a class="filter-link" href="/recipes?mealtype=lunch">Lunch Recipes</a></li>
                                    <li class="mb-3"><a class="filter-link" href="/recipes?mealtype=dinner">Dinner Recipes</a></li>
                                    <li class="mb-3"><a class="filter-link" href="/recipes?mealtype=vegetarian">Vegeterian Recipes</a></li>
                                    <li class="mb-3"><a class="filter-link" href="/recipes?mealtype=vegan">Vegan Recipes</a></li>
                                    <li class="mb-3"><a class="filter-link" href="#">Low Calorie Recipes</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>    
            <div class="row row-cols-1 row-cols-md-3 g-4">
                <% for (let recipe of recipes) { %>
                    <div class="card bg-light text-black container">
                        <img src="<%= recipe.image %>" class="card-img" alt="...">
                        <div class="card-img-overlay d-flex justify-content-end">
                            <a href="/recipes/<%= recipe._id %>" class="stretched-link" id="cardlink">
                            <h5 class="card-title"><%= recipe.name  %></h5>
                            </a>
                        </div>
                    </div>
                <% } %> 
            </div> 
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
